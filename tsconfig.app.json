{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "apps/**/*",
    "apps/**/*.vue",
    "apps/**/*.ts",
    "packages/**/*",
    "packages/**/*.vue",
    "packages/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "composite": true,
    "baseUrl": ".",
    "types": ["vite/client", "unplugin-vue-define-options/macros-global"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
